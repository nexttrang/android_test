<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:elevation="0dp"
    android:id="@+id/appBarNormalMode">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_normalMode"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorToolBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <ImageButton
            android:id="@+id/ibtnDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_menu_white_24dp"
            android:onClick="openDrawerLayout" />

        <ImageButton
            android:id="@+id/ibtnLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ibtnDrawer"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_logo_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ibtnLogo"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="Report"
            android:textStyle="bold"/>


    </RelativeLayout>

</com.google.android.material.appbar.AppBarLayout>